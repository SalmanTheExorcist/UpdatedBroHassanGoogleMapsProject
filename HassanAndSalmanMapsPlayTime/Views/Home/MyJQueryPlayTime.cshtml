@{
    ViewBag.Title = "GooglePlaces via JQuery";
}

@section scripts{

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAMrD1y782H_DWSR-Y02QLxGzOAdFbWJP4&libraries=places,geometry"></script>
    <script src="~/Scripts/MyCustomScripts/MyJQueryPlayTime.js"></script>
    <script>

        $(document).ready(function () {
            initializeMyJqueryPlayTime();

        });
    </script>

}

<style>
    h6, .h6 {
        font-size: 18px;
    }

    th {
        text-align: center;
    }

    body {
        font-size: 22px;
    }
</style>

<div>
    <h2 class="well">

        <img src="~/Content/powered-by-google/desktop/powered_by_google_on_white_hdpi.png" />
    </h2>

    <hr />
</div>

<div class="form-horizontal row myBigPageRowForOverLay">

    <div class="form-group-sm row">
        <div class="col-sm-3">
            <input type="button" class="btn btn-primary hidden" id="btnLoadMyMap" value="Click Me To Render My Map" />
            <button class="btn btn-primary" id="btnJQueryPromisesPlayTime">Click Here to Start!</button>
            <button class="btn btn-primary hidden" id="btnJQueryPromisesPlayTime_Refresh">Click To Refresh Results</button>
        </div>
        <div class="col-sm-8 alert alert-warning">
            <div class="modal-header">Adjust The Scale Below, Then Click On Button On Left To Render The Map</div>
            <div class="form-group-sm row">
                <label class="col-md-4 control-label" for="scaleInputRadius">Circle Radius (meters):</label>
                <div class="col-md-8">
                    <input id="scaleInputRadius" name="scaleInputRadius" type="range" min="100" max="500" step="100" value="200" />
                </div>
            </div>

            <div class="form-group-sm row hidden">
                <label class="col-md-4 control-label" for="scaleInputZoom">Adjust Area Zoom:</label>
                <div class="col-md-8">
                    <input id="scaleInputZoom" name="scaleInputZoom" type="range" min="16" max="20" step="1" value="16" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6">
            <div id="divMyMap"></div>
        </div>

        <div id="divMyMapInformation" class="col-sm-push-1  col-sm-5 alert alert-info text-left extraPadding hidden">
            <div class="modal-header">Useful Information About My Map</div>
            <div class="row form-group-sm h6">-&nbsp;Current Position Latitude (Horizontal Lines): <label id="lblCurrentPositionLatitude"></label></div>
            <div class="row form-group-sm h6">-&nbsp;Current Position Longtitude (Vertical Lines): <label id="lblCurrentPositionLongtitude"></label></div>
            <div class="row form-group-sm h6">-&nbsp;Bouncing Red Marker On Map Points To Center of the Circle</div>
            <div class="row form-group-sm h6">-&nbsp;Map Zoom Value: <label id="lblMapZoomValue"></label></div>
            <div class="row form-group-sm h6">-&nbsp;Circle Radius (meters): <label id="lblCircleRadius"></label></div>
        </div>
    </div>
</div>
<hr />
<div class="row form-group-sm h6 alert alert-success text-center">
    <div class="row extraPadding">
        <div class="form-group">

            @*<select class="form-control hidden" id="drpLocationTypes"></select>

                <input type="button" class="btn btn-primary hidden" id="btnSearchNearPlaces" value="Click Me To Search Near Places" />*@
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtSearchKeyWords" placeholder="Search Keywords" />
            </div>
            <div class="col-sm-4">
                <button class="btn btn-primary hidden" id="btnJQueryPromisesPlayTime_Refresh_Two">Click To Refresh Results</button>
            </div>
        </div>
        <div class="row">
            <table class="table  table-bordered specifictd" id="tableSearchPlacesResults">
                <caption>
                    <label id="lblSearchResultsCount" class="alert alert-link h4"></label>
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Place Name</th>
                        <th>Type</th>
                        <th>Distance From Center</th>
                        <th>Latitude (Horizontal Lines)</th>
                        <th>Longtitude (Vertical Lines)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>